<% breadcrumb :admin_corporation_shop_facility_facility_key, @corporation, @shop, @facility, @facility_key %>

<div class="box box-default">
  <div class="box-header with-border">
    <h4 class="box-title"><%= Facility.model_name.human %>詳細</h4>
    <div class="box-tools">
      <%= link_to "戻る", admin_corporation_shop_facility_path(@corporation, @shop, @facility), class: 'btn btn-default' %>
      <%= link_to "編集", edit_admin_corporation_shop_facility_facility_key_path(@corporation, @shop, @facility, @facility_key), class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <tr>
        <th style="width: 200px;"><%= FacilityKey.human_attribute_name(:name) %></th>
        <td><%= @facility_key.name %></td>
      </tr>
      <tr>
        <th style="width: 200px;"><%= FacilityKey.human_attribute_name(:password) %></th>
        <td><%= @facility_key.password %></td>
      </tr>
    </table>
  </div>
</div>

<%= bootstrap_form_for([:admin, corporation, shop], layout: :horizontal) do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :postal_code %>
  <%= f.text_field :address %>
  <%= f.text_field :tel %>
  <%= f.time_field :opening_time, { include_blank: true, class: 'bootstrap-date' } %>
  <%= f.time_field :closing_time, { include_blank: true, class: 'bootstrap-date' } %>
  <%= f.text_field :calendar_url %>
  <%= f.file_field :image %>
  <%= f.select :registerable, [['可', true],['不可', false]] %>
  <%= f.select :shop_type, Shop.shop_types_i18n.invert %>
  <%= f.submit class: 'btn btn-primary center-block' %>
<% end %>

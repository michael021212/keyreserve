<% breadcrumb :new_admin_corporation_facility_facility_temporary_plan, @corporation, @facility.shop, @facility %>

<div class="box box-default">
  <div class="box-header with-border">
    <h4 class="box-title"><%= Plan.model_name.human %>新規登録</h4>
  </div>
  <div class="box-body">
    <%= bootstrap_nested_form_for([:admin, @corporation, @facility, @facility_temporary_plan]) do |f| %>
      <%= f.collection_select :plan_id, Plan.all, :id, :name, include_blank: true  %>
      <%= f.text_field :standard_price_per_day %>
      <%= f.text_field :standard_price_per_hour %>
      <%= f.form_group :facility_temporary_plan_prices, label: {text: "施設利用都度課金プラン時間帯価格"} do %>
        <%= f.fields_for :facility_temporary_plan_prices do |pp| %>
          <div class="form-inline">
            <%= pp.time_select :starting_time, { discard_minute: true }, { class: 'form-control bootstrap-date' } %>
            <%= pp.time_select :ending_time, { discard_minute: true }, { class: 'form-control bootstrap-date' } %>
            <%= pp.text_field :price, skip_label: true %>
            <%= pp.link_to_remove "削除", :confirm => t('cargo_item.remove_item_confirmation'), class: 'glyphicon glyphicon-remove', inline: true %>
          </div>
        <% end %>
        <p><%= f.link_to_add "施設利用都度課金プラン時間帯価格を追加する", :facility_temporary_plan_prices, class: 'btn btn-info glyphicon glyphicon-plus' %></p>
      <% end %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

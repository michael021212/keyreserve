<%= bootstrap_nested_form_for([:admin, corporation, facility, facility_temporary_plan]) do |f| %>
  <%= f.collection_select :plan_id, @corporation.plans.all, :id, :name, {include_blank: '非会員' } %>
  <%= f.select :ks_room_key_id, options_for_select(f.object.selectable_keys.map {|f| [f.name, f.ks_room_key_id]}, selected: f.object.ks_room_key_id), include_blank: true, help: '鍵が「空」の場合は、施設詳細の施設鍵一覧で登録してください' %>
  <%= f.text_area :guide_mail, rows: 10 %>
  <%= f.file_field :guide_file, help: '一つのファイルしか保存できないため、新しいファイルをアップロードする際に元のファイルが上書きされます' %>
  <div class='form-group'>
    <%= f.label '現在の案内ファイル' %><br/>
    <%= link_to f.object.guide_file.file.filename, f.object.guide_file.url if f.object.guide_file.present? %>
  </div>
  <%= f.text_field :standard_price_per_day, help: "\'0\'の場合未対応" %>
  <%= f.text_field :standard_price_per_hour, help: "\'0\'の場合未対応" %>
  <%= f.form_group :facility_temporary_plan_prices, label: {text: "施設利用都度課金プラン時間帯価格（標準価格以外の価格）"} do %>
    <%= f.fields_for :facility_temporary_plan_prices do |pp| %>
      <div class="form-inline mb20">
        <%= pp.time_select :starting_time, { discard_minute: true, default: { minute: '00' }, include_blank: true, hide_label: true } %>時〜
        <%= pp.time_select :ending_time, { discard_minute: true, default: { minute: '00' }, include_blank: true, hide_label: true } %>時
        <span class='price-text-field mr50'>
          <%= pp.text_field :price, hide_label: true %>円
        </span>
        <%= pp.link_to_remove "削除", :confirm => t('cargo_iem.remove_item_confirmation'), class: 'glyphicon glyphicon-remove', inline: true %>
      </div>
    <% end %>
    <p><%= f.link_to_add "追加", :facility_temporary_plan_prices, class: 'btn btn-info glyphicon glyphicon-plus' %></p>
  <% end %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

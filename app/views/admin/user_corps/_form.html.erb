<%= bootstrap_form_for([:admin, user_corp], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :email %>
  <%= f.text_field :tel %>
  <%= f.text_field :max_user_num, help: '追加可能な利用者人数' %>
  <% if f.object.new_record? %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
  <% else %>
    <%= f.password_field :password, help: t('.guide_change_password') %>
    <%= f.password_field :password_confirmation, help: t('.guide_change_password') %>
  <% end %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

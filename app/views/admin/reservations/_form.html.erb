<%= bootstrap_form_for([:admin, reservation], layout: :horizontal) do |f| %>
  <%= f.form_group :block_flag do %>
    <%= f.check_box :block_flag, { id: 'reservation_block_flag' } %>
  <% end %>
  <%= f.select :facility_id, Facility.conference_room.collect { |f| [f.name, f.id] } %>
  <%= f.select :user_id, User.all.collect { |u| [u.name, u.id] }, include_blank: true %>
  <%= f.number_field :num %>
  <%= f.datetime_select :checkin, { use_month_numbers: true, minute_step: 60 }, { class: 'form-control bootstrap-date' } %>
  <%= f.select :usage_period, (1..10).map{|i| [i.to_s + '時間', i]}, include_blank: true %>
  <%= f.form_group :mail_send_flag do %>
    <%= f.check_box :mail_send_flag %>
  <% end %>
  <%= f.submit class: 'btn btn-primary center-block' %>
<% end %>

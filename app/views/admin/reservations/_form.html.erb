<%= bootstrap_form_for([:admin, reservation], layout: :horizontal) do |f| %>
  <%= f.form_group :block_flag, {id: 'js-block-flag-content' } do %>'
    <%= f.check_box :block_flag, { id: 'js-block-flag' }, true, false %>
  <% end %>
  <%= f.select :facility_id, Facility.all.collect { |f| [f.name, f.id] } %>
  <%= f.select :user_id, User.all.collect { |u| [u.name, u.id] }, include_blank: true %>
  <%= f.datetime_select :checkin, { use_month_numbers: true }, { class: 'form-control bootstrap-date' } %>
  <%= f.datetime_select :checkout, { use_month_numbers: true }, { class: 'form-control bootstrap-date' } %>
  <%= f.form_group :mail_send_flag do %>
    <%= f.check_box :mail_send_flag %>
  <% end %>
  <%= f.submit class: 'btn btn-primary center-block' %>
<% end %>

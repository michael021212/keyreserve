<%= bootstrap_form_for([:admin, user], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :email %>
  <%= f.text_field :tel %>
  <%= f.select :state, User.states_i18n.invert %>
  <%= f.select :payway, User.payways_i18n.invert %>
  <% if f.object.new_record? %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
  <% else %>
    <%= f.password_field :password, help: '変更したくない場合は空にしてください' %>
    <%= f.password_field :password_confirmation, help: '変更したくない場合は空にしてください' %>
  <% end %>
  <% if params[:parent_id].present? %>
    <%= f.hidden_field :parent_id, value: params[:parent_id] %>
  <% else %>
    <%= f.select :user_type, User.user_types_i18n.invert %>
    <%= f.text_field :max_user_num, help: '法人の場合に使用者の追加出来る上限数の設定' %>
    <%= f.form_group :advertise_notice_flag, label: {} do %>
      <%= f.check_box :advertise_notice_flag %>
    <% end %>
  <% end %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

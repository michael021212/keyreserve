    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= PropertyManager.human_attribute_name(:id) %></th>
          <th><%= PropertyManager.human_attribute_name(:name) %></th>
          <th><%= PropertyManager.human_attribute_name(:nickname) %></th>
          <th><%= PropertyManager.human_attribute_name(:email) %></th>
          <th><%= PropertyManager.human_attribute_name(:tel) %></th>
          <th><%= PropertyManager.human_attribute_name(:state) %></th>
          <th style="width: 200px;"></th>
        </tr>
      </thead>
      <tbody>
        <% @corporation.property_managers.each do |property_manager| %>
          <tr>
            <td><%= property_manager.id %></td>
            <td><%= property_manager.name %></td>
            <td><%= property_manager.nickname %></td>
            <td><%= property_manager.email %></td>
            <td><%= property_manager.tel %></td>
            <td><%= property_manager.state_i18n %></td>
            <td>
              <%= link_to '詳細', admin_corporation_property_manager_path(@corporation, property_manager), class: 'btn btn-default' %>
              <%= link_to '編集', edit_admin_corporation_property_manager_path(@corporation, property_manager), class: 'btn btn-primary' %>

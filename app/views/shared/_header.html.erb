<header class="header transp sticky"> <!-- available class for header: .sticky .center-content .transp -->
  <nav class="navbar navbar-inverse">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#"><%= image_tag 'logo.png' %></a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li>
              <%= link_to 'ご利用可能な施設', facilities_path  %>
            </li>
            <li>
              <%= link_to 'ログアウト', sign_out_path %>
            </li>
          <% else %>
            <li>
              <%= link_to 'ログイン', sign_in_path %>
            </li>
          <% end %>

          <% if logged_in? && current_corporation? %>
            <li class="<%= active_class('corporations') %>">
              <%= link_to '施設管理者メニュー', corporation_path %>
            </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>

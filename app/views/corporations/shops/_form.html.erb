<%= bootstrap_form_for([:corporations, shop], layout: :horizontal) do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :postal_code %>
  <%= f.text_field :address %>
  <%= f.text_field :tel %>
  <%= f.time_select :opening_time, { include_blank: true }, { class: 'time-select' } %>
  <%= f.time_select :closing_time, { include_blank: true }, { class: 'time-select'} %>
  <%= f.submit class: 'btn btn-dark-main center-block' %>
<% end %>

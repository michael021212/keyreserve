<%= bootstrap_nested_form_for([:corporations, @shop, facility]) do |f| %>
  <%= f.text_field :name %>
  <%= f.fields_for :facility_plans do |fp| %>
    <%= fp.collection_select :plan_id, current_corporation.plans, :id, :name, include_blank: 'プランを選択してください', hide_label: true %>
    <%= fp.link_to_remove "削除", class: 'remove-plan' %>
  <% end %>
  <p><%= f.link_to_add "＋プランを追加する", :facility_plans, class: 'btn, btn-info' %></p>
  <%= f.submit class: 'btn btn-primary center-block' %>
<% end %>

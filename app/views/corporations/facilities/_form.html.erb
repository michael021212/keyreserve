<%= bootstrap_nested_form_for([:corporations, @shop, facility]) do |f| %>
  <%= f.text_field :name %>
  <%= f.fields_for :facility_plans do |fp| %>
    <div  class="form-inline">
      <%= fp.collection_select :plan_id, current_corporation.plans, :id, :name, { include_blank: 'プランを選択してください' , hide_label: true }, { class: 'add-link-column', inline: true } %>
      <%= fp.link_to_remove "削除", :confirm => t('cargo_item.remove_item_confirmation'), class: 'glyphicon glyphicon-remove', inline: true %>
    </div>
  <% end %>
  <p><%= f.link_to_add "プランを追加する", :facility_plans, class: 'btn btn-info glyphicon glyphicon-plus' %></p>
  <%= f.submit class: 'btn btn-dark-main center-block' %>
<% end %>

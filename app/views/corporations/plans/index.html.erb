<div class="box box-default">
  <div class="box-header with-border">
    <h4 class="box-title"><%= Plan.model_name.human %>一覧</h4>
    <div class="box-tools">
      <%= link_to "新規追加", new_corporations_plan_path, class: 'btn btn-info' %>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= Plan.human_attribute_name(:name) %></th>
          <th><%= Plan.human_attribute_name(:price) %></th>
          <th style="width: 300px;"></th>
        </tr>
      </thead>
      <tbody>
        <% if @plans.present? %>
          <% @plans.each do |plan| %>
            <tr>
              <td><%= plan.name %></td>
              <td><%= delimiter_price(plan.price) %></td>
              <td>
                <%= link_to '詳細', corporations_plan_path(plan), class: 'btn btn-default' %>
                <%= link_to '編集', edit_corporations_plan_path(plan), class: 'btn btn-primary' %>
                <%= link_to '削除', corporations_plan_path(plan), method: :delete, data: { confirm: '削除しますか?' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

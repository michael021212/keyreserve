<div class="box box-default">
  <div class="box-header with-border">
    <h4 class="box-title"><%= Plan.model_name.human %>詳細</h4>
    <div class="box-tools">
      <%= link_to "戻る", corporations_plans_path, class: 'btn btn-default' %>
      <%= link_to "編集", edit_corporations_plan_path(@plan), class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <tr>
        <th style="width: 200px;"><%= Plan.human_attribute_name(:name) %></th>
        <td><%= @plan.name %></td>
      </tr>
      <tr>
        <th><%= Plan.human_attribute_name(:price) %></th>
        <td><%= delimiter_price(@plan.price) %></td>
      </tr>
    </table>
  </div>
</div>

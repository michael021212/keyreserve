<div class="mg-page">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="mg-sec-title">
          <h2><%= User.model_name.human %>一覧</h2>
        </div>
        <div class="mb50">
          <%= link_to "新規ユーザ招待", new_corporations_user_path, class: 'btn btn-main' %>
        </div>
        <table class="table mb40">
          <thead>
            <tr>
              <th><%= User.human_attribute_name(:name) %></th>
              <th><%= User.human_attribute_name(:email) %></th>
              <th><%= User.human_attribute_name(:tel) %></th>
              <th style="width: 200px;"></th>
            </tr>
          </thead>
          <tbody>
            <% if @users.present? %>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.tel %></td>
                  <td>
                    <%= link_to '詳細', corporations_user_path(user), class: 'btn btn-default' %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

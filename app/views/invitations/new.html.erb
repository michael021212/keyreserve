<% content_for :middle_title do %>
  <h2><%= User.model_name.human %>管理</h2>
<% end %>
<div class="container mt30">
  <div class="panel">
    <div class="panel-heading mb50">
      <h4 class="box-title"><%= User.model_name.human %>新規招待</h4>
    </div>
    <div class="panel-body">
      <%= bootstrap_form_tag(url: invitations_path) do |f| %>
        <%= f.email_field :email, label: "メールアドレス" %>
        <%= f.submit '送信', :class => 'btn btn-primary center-block' %>
      <% end %>
    </div>
  </div>
</div>

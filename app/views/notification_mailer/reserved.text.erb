<%# RemoteLock利用予約の場合 %>
<% if Shop.with_remote_lock_shops.include?(@reservation.facility.shop) %>
<%= render '/notification_mailer/partials/reserved_for_rl',
  reservation: @reservation,
  ksc_reservation_no: @ksc_reservation_no,
  ks_room_key_info: @ks_room_key_info %>

<%# フレキシブル予約の場合 %>
<% elsif @reservation.facility.ks_flexible? %>
<%= render '/notification_mailer/partials/reserved_for_flexible',
  reservation: @reservation,
  ksc_reservation_no: @ksc_reservation_no,
  ks_room_key_info: @ks_room_key_info %>

<%# 公共施設予約の場合 %>
<% elsif @reservation.facility.public_place? %>
<%= render '/notification_mailer/partials/reserved_for_public',
  reservation: @reservation,
  ksc_reservation_no: @ksc_reservation_no,
  ks_room_key_info: @ks_room_key_info %>

<%# 一般施設予約の場合 %>
<% else %>
<%= render '/notification_mailer/partials/reserved_for_general',
  reservation: @reservation %>
<% end %>

<% content_for :middle_title do %>
  <h2>アカウント情報更新</h2>
<% end %>
<div class="panel panel-default">
  <div class="panel-body edit-user-panel mt40">
    <%= bootstrap_form_for @user, url: user_path, layout: :horizontal, label_col: 'col-md-4', control_col: 'col-md-8' do |f| %>
      <%= f.text_field :name %>
      <%= f.text_field :tel %>
      <%= f.text_field :email %>
      <%= f.password_field :password, placeholder: "4文字以上" %>
      <%= f.password_field :password_confirmation, placeholder: "4文字以上" %>
      <div class="row">
        <div class="col-md-4 col-sm-2 col-xs-12"></div>
        <div class="col-md-4 col-sm-4 col-xs-12">
          <%= link_to 'キャンセル', user_path, class: 'btn btn-cancel' %>
        </div>
        <div class="col-md-3 col-sm-4 col-xs-12">
          <%= f.button '更新', class: 'btn btn-default login-page-btn' %>
        </div>
        <div class="col-md-2 col-sm-2 col-xs-12"></div>
      </div>
    <% end %>
  </div>
</div>

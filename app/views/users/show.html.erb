<% content_for :middle_title do %>
  <h2>アカウント情報</h2>
<% end %>
<div class="panel panel-default">
  <div class="panel-body mt40">
    <%= bootstrap_form_for @user, url: user_path, layout: :horizontal, label_col: 'col-md-4', control_col: 'col-md-8' do |f| %>
      <%= f.static_control :name %>
      <%= f.static_control :tel %>
      <%= f.static_control :email %>
      <%= f.static_control :password do %>*****<% end %>
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <%= link_to '編集', edit_user_path, class: 'btn btn-default login-page-btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

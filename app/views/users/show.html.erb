<% content_for :middle_title do %>
  <h2>アカウント情報</h2>
<% end %>
<div class="container sp-center">
  <div class="panel panel-default">
    <div class="panel-body mt40">
      <div class="mg-sec-title">
        <h3>アカウント情報</h3>
      </div>
      <%= bootstrap_form_for @user, url: user_path, layout: :horizontal, label_col: 'col-md-5', control_col: 'col-md-7' do |f| %>
        <%= f.static_control :name %>
        <%= f.static_control :tel %>
        <%= f.static_control :email %>
        <%= f.static_control :password do %>*****<% end %>
        <%= f.static_control :advertise_notice_flag do %>
          <%= f.object.advertise_notice_flag? ? '◯' : '' %>
        <% end %>
        <div class="row">
          <div class="col-md-offset-3 col-md-6">
            <%= link_to '編集', edit_user_path, class: 'btn btn-dark-main center-block' %>
          </div>
        </div>
      <% end %>
      <div class="mg-sec-title mt80">
        <h3>本人確認</h3>
      </div>
      <%= current_user.personal_identification.verified? ? '認証' : '未認証' %>
    </div>
    <div class="panel-body mt40">
    </div>
  </div>
</div>

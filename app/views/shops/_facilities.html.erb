<% @facilities.each do |facility| %>
  <div class="mg-avl-room mb30">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag facility.image.main.url, class: 'img-responsive' %>
      </div>
      <div class="col-sm-8">
        <h3 class="mg-avl-room-title">
          <%= facility.name %>
        </h3>
        <p>
          <%= facility.description %>
        </p>
      </div>
    </div>
  </div>
<% end %>
<%= paginate @facilities %>

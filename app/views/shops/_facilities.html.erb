<% @shop.facilities.each do |facility| %>
  <div class="mg-avl-room mb30">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag facility.image.main.url, class: 'img-responsive' %>
      </div>
      <div class="col-sm-8">
        <h3 class="mg-avl-room-title">
          <%= facility.name %>
        </h3>
        <p>
          <%= facility.description %>
        </p>
        <div class="row">
          <div class='mg-sec-title mb30'>
            <h4>ご利用可能なプラン</h4>
          </div>
            <% facility.selectable_plans.each_with_index do |plan, i| %>
              <div class="col-sm-4">
                <div class="mg-feature">
                  <h5 class='text-center'><%= plan.name %></h5>
                  <p class='desc-col'><%= truncate(plan.description, length: 100) %></p>
                  <%= link_to '申し込み', '#', class: 'btn btn-dark-main center-block' %>
                </div>
              </div>
              <div class="<%= 'clearfix' if (i+1) % 3 == 0 %>"></div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

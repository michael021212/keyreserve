<% content_for :middle_title do %>
  <h2>店舗情報</h2>
<% end %>
<div class="mg-page mg-available-rooms">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% @shops.each do |shop| %>
          <div class="mg-avl-room">
            <div class="row">
              <div class="col-sm-5">
                <% if shop.image? %>
                  <%= link_to shop_path(shop) do %>
                    <%= image_tag shop.image_url(:main), class: 'img-responsive' %>
                  <% end %>
                <% else %>
                  <%= link_to shop_path(shop) do %>
                    <%= image_tag 'noimage.png', class: 'img-responsive' %>
                  <% end %>
                <% end %>
              </div>
              <div class="col-sm-7">
                <h3 class="mg-avl-room-title">
                  <%= link_to shop_path(shop) do %>
                    <%= shop.name %>
                  <% end %>
                </h3>
                <p>
                <%= "〒#{shop.postal_code} #{shop.address}" %>
                </p>
                <div class="row mg-room-fecilities">
                  <div class="col-sm-12">
                    <ul class='ul-newline'>
                      <li>
                        <%= "電話: #{tel_fmt(shop.tel)}" %>
                      </li>
                      <li>
                        <%= "営業時間: #{time_fmt(shop.opening_time)} - #{time_fmt(shop.closing_time)}" %>
                      </li>
                    </ul>
                  </div>
                </div>
                <%= link_to shop_path(shop, corporation_name: params[:corporation_name]), class: 'btn btn-dark' do %>
                  詳細<i class="fa fa-angle-double-right"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <%= paginate @shops %>
      </div>
    </div>
  </div>
</div>

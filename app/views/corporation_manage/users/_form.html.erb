<%= bootstrap_form_for([:corporation_manage, user], layout: :horizontal) do |f| %>
  <%= f.collection_select :parent_id, current_corporation.users.parent_corporation, :id, :name, prompt: t('.select_corproation') %>
  <%= f.text_field :name %>
  <%= f.text_field :email %>
  <%= f.text_field :tel %>
  <%= f.select :state, User.states_i18n.invert %>
  <%= f.select :payway, User.payways_i18n.invert %>
  <%= f.select :user_type, User.user_types_i18n.invert.select{ |k,v| v == 'personal' || v == 'ks_flexible' } %>
  <% if f.object.new_record? %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
  <% else %>
    <%= f.password_field :password, help: t('.guide_change_password') %>
    <%= f.password_field :password_confirmation, help: t('.guide_change_password') %>
  <% end %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<%= bootstrap_form_for([:corporation_manage, user], layout: :horizontal) do |f| %>
  <%= f.collection_select :parent_id, current_corporation.users.parent_corporation, :id, :name, prompt: '所属している法人を選択して下さい (法人に所属していない場合は空にして下さい)' %>
  <%= f.text_field :name %>
  <%= f.text_field :email %>
  <%= f.text_field :tel %>
  <%= f.select :state, User.states_i18n.invert %>
  <%= f.select :payway, User.payways_i18n.invert %>
  <% if f.object.new_record? %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
  <% else %>
    <%= f.password_field :password, help: '変更したくない場合は空にしてください' %>
    <%= f.password_field :password_confirmation, help: '変更したくない場合は空にしてください' %>
  <% end %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<div class="box box-default">
  <div class="box-header with-border">
    <h4 class="box-title"><%= Plan.model_name.human %>一覧</h4>
    <div class="box-tools">
      <%= link_to '新規追加', new_corporation_manage_plan_path, class: 'btn btn-info' %>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= Plan.human_attribute_name(:id) %></th>
        <th><%= Plan.human_attribute_name(:default_flag) %></th>
        <th><%= Plan.human_attribute_name(:name) %></th>
        <th><%= Plan.human_attribute_name(:price) %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @plans.each do |plan| %>
        <tr class="cy-plan-<%= plan.id %>">
          <td><%= plan.id %></td>
          <td><%= plan.default_flag? ? '◯' : '' %></td>
          <td><%= plan.name %></td>
          <td><%= delimiter_price(plan.price) %></td>
          <td>
            <%= link_to '詳細', corporation_manage_plan_path(plan), class: 'btn btn-default' %>
            <%= link_to '編集', edit_corporation_manage_plan_path(plan), class: 'btn btn-primary' %>
            <%= link_to '削除', corporation_manage_plan_path(plan), method: :delete, data: { confirm: '削除しますか?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @plans %>
  </div>
</div>

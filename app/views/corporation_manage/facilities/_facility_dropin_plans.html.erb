<!-- 施設利用ドロップイン時間帯プラン -->
<div class="box box-default">
  <div class="box-header with-border">
    <h4 class="box-title">施設利用ドロップインプラン</h4>
    <div class="box-tools cy-add-dropin-plan-btn">
      <%= link_to '新規追加', new_corporation_manage_shop_facility_facility_dropin_plan_path(shop, facility), class: 'btn btn-primary' %>
    </div>
  </div>
  <div id='js-dropin-plan-table'
       data-shop-id=<%= @shop.id %>
       data-facility-id=<%= @facility.id %>
       data-opening-time=<%= time_fmt(@shop.opening_time) %>
       data-closing-time=<%= time_fmt(@shop.closing_time) %>>
  </div>
</div>

<%= bootstrap_form_for([:corporation_manage, user, personal_identification], layout: :horizontal) do |f| %>
  <%= f.select :status, PersonalIdentification.statuses_i18n.invert, include_blank: true %>
  <%= f.select :card_type, PersonalIdentification.card_types_i18n.invert, include_blank: true %>
  <%= f.file_field :front_img %>
  <% if f.object.front_img.present? %>
    <%= f.form_group :front_img do %>
      <%= image_tag f.object.front_img.url, width: '200px' %>
    <% end %>
  <% end %>
  <%= f.file_field :back_img %>
  <% if f.object.back_img.present? %>
    <%= f.form_group :back_img do %>
      <%= image_tag f.object.back_img.url, width: '200px' %>
    <% end %>
  <% end %>
  <%= f.submit class: 'btn btn-primary center-block' %>
<% end %>

<div class="box box-default">
  <div class="box-header with-border">
    <h4 class="box-title"><%= t('.title') %></h4>
    <div class="box-tools">
      <%= link_to t('common.btn.back'), corporation_manage_shop_facility_path(@shop, @facility), class: 'btn btn-default' %>
      <%= link_to t('common.btn.edit'), edit_corporation_manage_shop_facility_facility_key_path(@shop, @facility, @facility_key), class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <tr class="cy-key-name">
        <th><%= FacilityKey.human_attribute_name(:name) %></th>
        <td><%= @facility_key.name %></td>
      </tr>
      <tr class="cy-key-password">
        <th><%= FacilityKey.human_attribute_name(:password) %></th>
        <td><%= @facility_key.password %></td>
      </tr>
    </table>
  </div>
</div>

<div class="box box-default">
  <div class="box-header with-border">
    <h4 class="box-title"><%= UserContract.model_name.human %>一覧</h4>
    <div class="box-tools">
      <%= link_to '新規追加', new_corporation_manage_user_contract_path, class: 'btn btn-info' %>
    </div>
  </div>
  <div class="box-header with-border">
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= UserContract.human_attribute_name(:id) %></th>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= UserContract.human_attribute_name(:state) %></th>
        <th><%= UserContract.human_attribute_name(:plan_id) %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @user_contracts.each do |user_contract| %>
        <tr class="cy-user-contract-<%= user_contract.id %>">
          <td><%= user_contract.id %></td>
          <td><%= user_contract.user_name %></td>
          <td><%= user_contract.state_i18n %></td>
          <td><%= user_contract.plan_name %></td>
          <td>
            <%= link_to '詳細', corporation_manage_user_contract_path(user_contract), class: 'btn btn-default' %>
            <%= link_to '編集', edit_corporation_manage_user_contract_path(user_contract), class: 'btn btn-primary' %>
            <%= link_to '削除', corporation_manage_user_contract_path(user_contract), method: :delete, data: { confirm: '削除しますか?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @user_contracts %>
  </div>
</div>

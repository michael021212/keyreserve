<div class="box box-default">
  <div class="box-header with-border">
    <h4 class="box-title"><%= Information.model_name.human %>一覧</h4>
    <div class="box-tools">
      <%= link_to '新規追加', new_corporation_manage_information_path, class: 'btn btn-info' %>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= Information.human_attribute_name(:publish_time) %></th>
        <th><%= Information.human_attribute_name(:shop_id) %></th>
        <th><%= Information.human_attribute_name(:title) %></th>
        <th><%= Information.human_attribute_name(:mail_send_flag) %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% if @information_lists.present? %>
        <% @information_lists.each do |information| %>
          <tr class="cy-information-<%= information.id %>">
            <td><%= date_ja(information.publish_time) %></td>
            <td><%= information.shop_name %></td>
            <td><%= information.title %></td>
            <td><%= information.decorate.mail_send_flag_circle_string %></td>
            <td>
              <%= link_to '詳細', corporation_manage_information_path(information), class: 'btn btn-default' %>
              <%= link_to '編集', edit_corporation_manage_information_path(information), class: 'btn btn-primary' %>
              <%= link_to '削除', corporation_manage_information_path(information), method: :delete, data: { confirm: '削除しますか?' }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="20">
            表示する<%= Information.model_name.human %>はありません
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @information_lists %>
  </div>
</div>

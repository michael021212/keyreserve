<div class="box box-default">
  <div class="box-header with-border">
    <h4 class="box-title"><%= t('.title') %></h4>
  </div>
  <div class="box-tools pull-right">
    <%= link_to t('common.btn.delete'),
                corporation_manage_shop_facility_facility_dropin_plan_path(@facility.shop, @facility, @facility_dropin_plan),
                method: :delete,
                data: { confirm: t('common.confirms.really_to_delete') },
                class: 'btn btn-danger' %>
  </div>
  <div class="box-body">
    <%= render 'form', facility: @facility, facility_dropin_plan: @facility_dropin_plan %>
  </div>
</div>

    <h4 class="box-title"><%= FacilityDropinPlan.model_name.human %>編集</h4>
  </div>
  <div class="box-tools pull-right">
    <%= link_to '削除',
                corporation_manage_shop_facility_facility_dropin_plan_path(@facility.shop, @facility, @facility_dropin_plan),

<%= bootstrap_nested_form_for([:corporation_manage, facility.shop, facility, facility_dropin_plan]) do |f| %>
  <%= f.collection_select :plan_id, current_corporation.plans.all, :id, :name, { include_blank: '非会員' } %>
  <%= f.text_field :guide_mail_title, help: '「空」の場合は案内メールの通知機能は「オフ」になります' %>
  <%= f.text_area :guide_mail_content, rows: 10 %>
  <%= f.file_field :guide_file, help: '新しいファイルをアップロードすると既存の案内ファイルが上書きされます' %>
  <%= f.form_group :facility_dropin_sub_plans, label: { text: '施設利用ドロップイン時間帯プラン' } do %>
    <%= f.fields_for :facility_dropin_sub_plans do |sub_plan| %>
      <div class="form-inline mb20">
        <%= sub_plan.text_field :starting_time,
                                hide_label: true,
                                class: 'js-dropin-starting-time',
                                data: { date_format: 'HH:mm' } %> 〜
        <%= sub_plan.text_field :ending_time,
                                hide_label: true,
                                class: 'js-dropin-ending-time',
                                data: { date_format: 'HH:mm' } %>
        <sub_planan class='price-text-field mr20 ml20'>
          <%= sub_plan.text_field :price, hide_label: true, class: 'cy-dropin-price' %>円
        </sub_planan>
        <sub_planan class='price-text-field mr20'>
          <%= sub_plan.text_field :name, hide_label: true, placeholder: 'プラン名', class: 'cy-dropin-name' %>
        </sub_planan>
        <%= sub_plan.link_to_remove '削除', :confirm => t('cargo_iem.remove_item_confirmation'), class: 'glyphicon glyphicon-remove', inline: true %>
      </div>
    <% end %>
    <p><%= f.link_to_add '追加', :facility_dropin_sub_plans, class: 'btn btn-info glyphicon glyphicon-plus' %></p>
  <% end %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
